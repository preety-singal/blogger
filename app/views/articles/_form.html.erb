<% if user_signed_in? %>


<%= form_for(@article, html: {multipart: true}) do |f| %>

  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

<p>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium) %><br/>
  <% end %>
  <%= f.label :image, "Attach a New Image" %><br />
  <%= f.file_field :image %>
</p>
<p>

 <%= f.label :image, "Attach multiple Images" %><br />
  <%= file_field_tag "images[]",  multiple: true %>
  </p>
    <p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
</p>
  <p>
    <%= f.submit %>
  </p>
 <% end %>
<% end %>

